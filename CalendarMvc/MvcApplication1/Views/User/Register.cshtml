@model MvcApplication1.UserInfo

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Register</h2>
  @using (Html.BeginForm("Register","User"))
  {
      <table>
          <tr><td>Account:</td><td>@Html.TextBoxFor(x=>x.UserName)</td></tr>
          <tr><td>Password:</td><td>@Html.PasswordFor(x=>x.UserPassword)</td></tr>
          <tr><td>Email:</td><td>@Html.TextBoxFor(x=>x.UserEmail)</td></tr>
          <tr><td>MobilePhone:</td><td>@Html.TextBoxFor(x=>x.UserPhone)</td></tr>
          <tr><td>Department:</td><td>@Html.DropDownListFor(x => x.UserDeptCode, new[] {
                                          new SelectListItem{ Text="HR",Value="HR"},
                                          new SelectListItem{Text="Engineer",Value="Engineer"},
                                          new SelectListItem{Text="Manager",Value="Manager"},        
                                      }, "Select")</td></tr>
          <tr><td><input type="submit" value="Register now" /></td><td></td></tr>
      </table>
  }  
